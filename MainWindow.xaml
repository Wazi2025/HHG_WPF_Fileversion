<Window x:Class="HHG_WPF_Fileversion.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HHG_WPF_Fileversion"
        mc:Ignorable="d"        
        Background="Black" x:Name="mainWindow"
        FocusManager.FocusedElement="{Binding ElementName=tbFirstName}"
        Title="HHG time-based quotes" Height="Auto" Width="Auto" Loaded="mainWindow_Loaded" Closed="mainWindow_Closed">
    <Grid x:Name="MainGrid">
        <UIElement.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform/>
            </TransformGroup>
        </UIElement.RenderTransform>
        <Grid x:Name="SubGrid" Height="Auto" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="tbFirstName" HorizontalAlignment="Left" Margin="42,77,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="194" RenderTransformOrigin="-0.114,0.406"/>
            <TextBox x:Name="tbLastName" HorizontalAlignment="Left" Margin="42,139,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="194" RenderTransformOrigin="-0.114,0.406"/>
            <TextBox x:Name="tbAge" HorizontalAlignment="Left" Margin="42,195,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="194" RenderTransformOrigin="-0.114,0.406"/>
            <Label  Foreground="White" Content="Age" HorizontalAlignment="Left" Margin="42,165,0,0" VerticalAlignment="Top"/>
            <Label  Foreground="White" Content="Last name" HorizontalAlignment="Left" Margin="42,110,0,0" VerticalAlignment="Top"/>
            <Label  Foreground="White" Content="First name" HorizontalAlignment="Left" Margin="42,48,0,0" VerticalAlignment="Top"/>
            <Button x:Name="btnOK" Content="Get Quote" Click="btnOK_Click" Margin="42,250,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" IsDefault="True"/>
            <Canvas x:Name="MainCanvas" Width="800" Height="600" HorizontalAlignment="Left">
                <TextBlock x:Name="tbQuote" TextWrapping="Wrap" Canvas.Left="10" Canvas.Top="280" Foreground="White" Height="165" Width="400"/>
            </Canvas>
        </Grid>
        <Grid Width="800" Height="600" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="image" HorizontalAlignment="Center" VerticalAlignment="center" Width="412" Height="306" Opacity="0.25"/>
        </Grid>                
    </Grid>
           
</Window>
